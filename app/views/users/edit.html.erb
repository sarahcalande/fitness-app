<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end %>
<% end %>

<h1>Sign Up</h1>
<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :gender %>
<%= f.text_field :gender %>
<%= f.submit %>

<% end %>



<%= button_to 'Delete My Account', @user, method: :delete, data: {confirm: 'Are you sure you want to delete your profile and all data?'} %>
